{
    "manifest_version": 3,
    "name": "Send to PotPlayer",
    "version": "1.0",
    "description": "Play videos directly in PotPlayer from your browser.",
    "permissions": ["contextMenus", "activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "potplayer-icon-16.png",
      "32": "potplayer-icon-32.png",
      "48": "potplayer-icon-48.png",
      "128": "potplayer-icon-128.png"
    },
    "action": {
      "default_icon": {
        "16": "potplayer-icon-16.png",
        "32": "potplayer-icon-32.png",
        "48": "potplayer-icon-48.png"
      },
      "default_title": "Send to PotPlayer"
    }
  }  